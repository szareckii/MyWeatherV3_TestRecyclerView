<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listDaysItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemDayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:lines="1"
        android:gravity="center"
        android:ellipsize="end"
        android:layout_weight="2"
        android:background="?attr/selectableItemBackground"
        android:textSize="@dimen/sizeTextItem"
        tools:text="@string/itemTextInRV" />

    <TextView
        android:id="@+id/itemTempTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:textSize="@dimen/sizeTextItem"
        android:gravity="right"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_weight="2"
        tools:text="@string/itemTextInRV" />

    <ImageView
        android:id="@+id/typeWeatherImageView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/itemNightTempTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="right"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:layout_weight="2"
        android:textSize="@dimen/sizeTextItem"
        tools:text="@string/itemTextInRV" />

    <ImageView
        android:id="@+id/typeNightWeatherImageView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_launcher_background" />

</LinearLayout>